{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "esnext",
      "dom.iterable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    //"module": "commonjs",  // use this one when you want to run tests...
    "module": "esnext",      // ...and this one when you want to run the website. (Sorry.)
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "outDir": "out/",
      "sourceMap": true
  },
  "include": [
    "src"
  ]
}
